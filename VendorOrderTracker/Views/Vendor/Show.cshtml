  @{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h3>Here are all the orders by @Model["vendor"].Name:</h3>

<ol>
@if (@Model["vendor"].Orders.Count == 0)
{
  <h5>@Model["vendor"].Name has not made any orders yet!</h5>
} 

@foreach (Orders orders in @Model["orders"])
{
  <li>@orders.Title</li>
}
</ol>

<p><a href='/Vendor/@Model["vendor"].Id/order/new'>Add a new order</a></p>
<p><a href='/vendor'>Return to vednors list</a></p>
<p><a href='/'>Return to Main Page</a></p>